{
  "name": "ironwood",
  "version": "0.1.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint-staged": "lint-staged",
    "lint-staged:lint": "eslint --fix --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint",
    "lint-staged:format": "prettier --write --ignore-unknown",
    "preview": "vite preview",
    "typecheck": "tsc",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-portal": "^1.1.2",
    "@radix-ui/themes": "^3.1.4",
    "@remix-run/node": "^2.13.1",
    "@remix-run/react": "^2.13.1",
    "@repo/decker": "*",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.9.0",
    "@remix-run/dev": "^2.13.1",
    "@storybook/addon-essentials": "^8.3.5",
    "@storybook/addon-interactions": "^8.3.5",
    "@storybook/addon-links": "^8.3.5",
    "@storybook/addon-onboarding": "^8.3.5",
    "@storybook/blocks": "^8.3.5",
    "@storybook/react": "^8.3.5",
    "@storybook/react-vite": "^8.3.5",
    "@storybook/test": "^8.3.5",
    "@types/lodash": "^4.17.9",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vercel/remix": "^2.12.0",
    "autoprefixer": "^10.4.19",
    "chromatic": "^11.12.5",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^0.9.0",
    "storybook": "^8.3.5",
    "storybook-addon-remix-react-router": "^3.0.1",
    "typescript": "^5.1.6",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "yarn lint-staged:lint",
      "yarn lint-staged:format"
    ],
    "!**/*.{js,ts,jsx,tsx}": "yarn lint-staged:format"
  }
}
