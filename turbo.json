{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["VERCEL_*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint-staged": {
      "dependsOn": ["^lint-staged"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:e2e": {
      "cache": false,
      "dependsOn": ["^test:e2e"],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "typecheck": {
      "cache": false,
      "dependsOn": ["^typecheck"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
